<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.beautyshop.mapper.CustomerMapper">

    <resultMap id="BaseResultMap" type="com.example.beautyshop.model.Customer">
        <id column="customer_id" property="customerId"/>
        <result column="name" property="name"/>
        <result column="gender" property="gender"/>
        <result column="phone" property="phone"/>
    </resultMap>

    <select id="findAll" resultMap="BaseResultMap">
        SELECT customer_id, name, gender, phone
        FROM Customer
        ORDER BY customer_id
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="customerId">
        INSERT INTO Customer (name, gender, phone)
        VALUES (#{name}, #{gender}, #{phone})
    </insert>

    <!-- 更新客户 -->
    <update id="update">
        UPDATE Customer
        SET name = #{name}, gender = #{gender}, phone = #{phone}
        WHERE customer_id = #{customerId}
    </update>

    <!-- 删除客户 -->
    <delete id="deleteById">
        DELETE FROM Customer WHERE customer_id = #{customerId}
    </delete>

</mapper>