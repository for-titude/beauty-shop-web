<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.beautyshop.mapper.BeautyServiceMapper">

    <resultMap id="BaseResultMap" type="com.example.beautyshop.model.BeautyService">
        <id column="service_id" property="serviceId"/>
        <result column="service_name" property="serviceName"/>
        <result column="price" property="price"/>
    </resultMap>

    <select id="findAll" resultMap="BaseResultMap">
        SELECT service_id, service_name, price
        FROM BeautyService
        ORDER BY service_id
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="serviceId">
        INSERT INTO BeautyService (service_name, price)
        VALUES (#{serviceName}, #{price})
    </insert>

    <!-- 更新项目 -->
    <update id="update">
        UPDATE BeautyService
        SET service_name = #{serviceName}, price = #{price}
        WHERE service_id = #{serviceId}
    </update>

    <!-- 删除项目 -->
    <delete id="deleteById">
        DELETE FROM BeautyService WHERE service_id = #{serviceId}
    </delete>

</mapper>